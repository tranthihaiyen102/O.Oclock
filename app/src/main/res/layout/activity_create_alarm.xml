<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".CreateAlarm">

    <TextView
        android:id="@+id/textTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="84dp"
        android:gravity="top"
        android:text="@string/some_id"
        android:textColor="@android:color/white"
        android:textSize="65sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_lap_lai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="279dp"
        android:gravity="top"
        android:text="@string/text_lap_lai"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimePicker" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="20dp"
        android:text="@string/cbo_hangNgay"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_lap_lai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimePicker" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTimePicker">

        <Button

            android:id="@+id/btn_mon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_t2"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/t2"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"></Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button

            android:id="@+id/btn_tue"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_t2"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/t3"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"></Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button

            android:id="@+id/btn_wed"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_t2"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/t4"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"></Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button

            android:id="@+id/btn_thur"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_t2"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/t5"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"></Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button

            android:id="@+id/btn_fri"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_t2"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/t6"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"></Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button

            android:id="@+id/btn_sat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_t2"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/t7"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"></Button>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button

            android:id="@+id/btn_sun"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_t2"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="@string/cn"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck"></Button>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/frame_custom_alarm"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/textTimePicker">


        <EditText
            android:id="@+id/editTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_label"
            android:ems="10"
            android:hint="Tiêu đề báo thức"
            android:inputType="textPersonName"
            android:padding="0dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="20dp"
            android:paddingBottom="0dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/turnOffAlarm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/editTextLabel"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="216dp"
            android:background="@drawable/turn_off_alarm"
            android:gravity="end"
            android:padding="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

